<% layout("/layouts/boilerplate") %>
<div class="row">
 <div class="col-8 offset-2"><br/><br/>
    <h3>Let's Try Something New </h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
  <div>
    <label for="title" class="form-label" >Title</label>
    <input  name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
    <div class="valid-feedback"> Title looks good!</div>
    <div class="invalid-feedback">Enter valid title</div>
  </div>  <br/> 
  

    <div>
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" type="text"class="form-control" required></textarea>
        <div class="invalid-feedback">Enter short Description</div>
      </div><br/>

  <div>
    <label for="image" class="form-label" >Upload Listing Image</label>
    <input  name="listing[image]" type="file" class="form-control" />required
</div><br/>

    <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-label" >Price</label>
            <input  name="listing[price]" placeholder="enter price" type="number"  class="form-control" required/>            
            <div class="invalid-feedback">Enter valid Price</div>
          </div>

        <div class="col-md-8">
            <label for="country" class="form-label" >Country</label>
            <input  name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
            <div class="invalid-feedback">Enter valid Country</div>
          </div>
    </div> <br/>

   <div>
     <label for="location" class="form-label" >Location</label>
     <input  name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
     <div class="invalid-feedback">Enter valid Location</div>
    </div> <br/>
     
    <button class="btn btn-dark">Add</button><br/><br/>
    </form>
 </div>  
</div>

